            android:id="@+id/signin_button"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="350px"/>

        <Button
            android:id="@+id/bn_logout"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Logout"
           />
